<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlecmineursprj.repository.ProductRepository">


    <!-- <resultMap id="productView" type="ProductView">
        <id property="id" column="id"/>
        <collection property="path" ofType="String">
            <id property="id" column="id"/>
        </collection>
    </resultMap> -->

    <select id="findAll" resultType="ProductView">
        SELECT
        *
        FROM product_view
    </select>

    <select id="findById" resultType="ProductView">
        SELECT
        *
        FROM product_view
        where id = #{id}
    </select>

    <insert id="reg" parameterType="ProductEntity">
        insert into product(name,selling_price, supplying_price, description ,img)
        values (#{name}, #{sellingPrice}, #{supplyingPrice}, #{description}, #{img})
    </insert>
</mapper>